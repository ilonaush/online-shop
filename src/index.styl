@import "./vars.styl"

img
  max-width 100%
  vertical-align middle
  max-height 100%




a
  color $link-color
  text-decoration none

.product_price-section
.product-card_price-section
  .product-card_price
  .product_price
    color $lighten-3
    font-size 19px
    &.sale
      font-weight bold

  .product-card_oldPrice
  .product_oldPrice
    position relative
    color $lighten-3
    &:before
      content ''
      border-bottom 1px solid $lighten-3
      width 100%
      position absolute
      right 0
      top 50%

.colors
  display flex
  .color
    width 30px
    cursor pointer
    height 30px
    border-radius 50%
    margin 5px 10px
    margin-left 0
    border 1px solid $lighten-3

    &.selected-color
      border 1px solid black

.line
	width 100%
	color grey
	height 1px

ul
	list-style none